<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="hanimeli-pu" transaction-type="JTA">
    <jta-data-source>jdbc/hanimeli</jta-data-source>
    <class>com.dukefuns.hanimeliweb.model.Comment</class>
    <class>com.dukefuns.hanimeliweb.model.Food</class>
    <class>com.dukefuns.hanimeliweb.model.Gallery</class>
    <class>com.dukefuns.hanimeliweb.model.Permission</class>
    <class>com.dukefuns.hanimeliweb.model.Picture</class>
    <class>com.dukefuns.hanimeliweb.model.QuantityPrice</class>
    <class>com.dukefuns.hanimeliweb.model.Orders</class>
    <class>com.dukefuns.hanimeliweb.model.Address</class>
    <class>com.dukefuns.hanimeliweb.model.Country</class>
    <class>com.dukefuns.hanimeliweb.model.Town</class>
    <class>com.dukecom.dukefuns.hanimeliweb.model.Carrier</class>
    <class>com.dukefuns.hanimeliweb.model.Person</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
    </properties>
  </persistence-unit>
  <persistence-unit name="test-pu" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.dukefuns.hanimeliweb.model.Comment</class>
    <class>com.dukefuns.hanimeliweb.model.Food</class>
    <class>com.dukefuns.hanimeliweb.model.Gallery</class>
    <class>com.dukefuns.hanimeliweb.model.Permission</class>
    <class>com.dukefuns.hanimeliweb.model.Picture</class>
    <class>com.dukefuns.hanimeliweb.model.QuantityPrice</class>
    <class>com.dukefuns.hanimeliweb.model.Orders</class>
    <class>com.dukefuns.hanimeliweb.model.Address</class>
    <class>com.dukefuns.hanimeliweb.model.Country</class>
    <class>com.dukefuns.hanimeliweb.model.Town</class>
    <class>com.dukecom.dukefuns.hanimeliweb.model.Carrier</class>
    <class>com.dukefuns.hanimeliweb.model.Person</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
      <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
      <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:derby:memory:HanimeliTest;create=true"/>
      <property name="eclipselink.logging.level" value="INFO"/>
    </properties>
  </persistence-unit>
</persistence>
